proc sqrt do
    let a pop
    let x 1
    let iterations 0

    iterations 40 =! while do
        a x / x + 2 / let x pop
        iterations 1 + let iterations pop
        iterations 40 =!
    end
    x
end

proc pi do
    let n 0
    let s 0

    true while do
        n 1 + let n pop

        1 n n * / s + let s pop

        n 1000000 =!
    end

    s 6 * sqrt
end


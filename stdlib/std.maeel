fun unix_input
(
    {}

    1 while
    (
        | Read one byte from /dev/stdin
        | and add it to output array
        "/dev/stdin" 1 read 0 get vmdup vmrot +

        | Stop if char is \n
        vmswap 10 = not
    )
)


fun contains xs x
(
    xs 0 vmswap for (vmdrop 1+) -> xs_len
    0 -> i

    0 1 while
    (
        xs i get x = => (vmdrop 1)
        i 1+ -> i
        i xs_len <
    )
)

fun reverse xs
(
    {} -> ys

    xs 0 vmswap for (vmdrop 1+) vmdup 1 gteq while
    (
        1- vmdup xs vmswap get ys+ -> ys
        vmdup 1 gteq
    )

    vmdrop ys
)

fun pop
(
    {} -> ys

    vmdup 0 vmswap for (vmdrop 1+) -> xs_len
    vmdup 0 get take1 -> y -> xs

    1 1 xs_len < while
    (
        xs vmover get ys+ -> ys 1+ vmdup xs_len <
    )

    ys y + vmswap vmdrop
)


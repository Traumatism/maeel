| Square root approximation
fun sqrt x
(
    0 5 range
    (vmdup x vmswap/ vmswap+ 2/ vmswap vmdrop)
    x 2/
    reduce
)

fun log base n
(
    0

    n base gteq while
    (
        | Increase the counter
        1+

        | Put n/base into n
        n base / vmdup -> n

        | if n <= base, then continue
        base gteq
    )
)

fun pow base exp
(
    | Generate a list of size 'exp' with only 'base'
    | and multiply all these 'base' togather
    0 exp range (vmdrop base) map product
)

fun range
(

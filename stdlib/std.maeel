fun format
(
    | Output string
    "" -> o

    for
    (
        -> char

        | If the char is a %, push the
        | stack top element (and vmdrop it)
        char "%" =     => (o vmswap +)

        | Otherwise, push the char
        char "%" = not => (o char +) -> o
    )

    o
)


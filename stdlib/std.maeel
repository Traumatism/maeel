| Return ( x if p(x) | x in xs )
fun filter p
(
    {} -> ys

    for
    (
        | If P(x) is true, push x to ys
        vmdup p& => (ys vmswap + -> ys)
    )

    ys
)

fun reduce xs fn init
(
    init xs for (vmswap fn&)
)

fun match
(
    vmswap -> value

    {} vmswap for
    (
        vmdup 0 get vmswap 1 get -> fn value = => (fn+)
    )

    vmdup 0 vmswap for (vmdrop 1+) 0 = => ("Unknown case!" panic)

    last
)


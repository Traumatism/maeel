{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "maeel",
	"patterns": [
		{
			"include": "#controls"
		},
		{
			"include": "#reserved-words"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.new",
					"match": "(\\+|\\*|\\-|\\||&|\\^|=|!)"
				}
			]	
		},

		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.maeel",
					"begin": "\"",
					"end": "\""
				}
			]
		},

		"numbers": {
			"patterns": [
				{
					"name": "keyword.other.unit",
					"match": "\\b(-?[0-9][0-9\\.]*)\\b"
				}
			]
		},

		"comments": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "(@.*)\\n"
				}
			]
		}
	},
	"scopeName": "source.maeel"
}
